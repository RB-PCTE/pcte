<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="report_invoice_document_jsi">
    <t t-call="custom_report_jsi.external_layout_custom_jsi">
        <t t-set="doc" t-value="doc.with_context({'lang':doc.partner_id.lang})"/>
        <div class="page">
            <!--<link rel="stylesheet" type="text/css" href="/custom_report_jsi/static/src/css/sale_report.css"/>-->
            <t t-set="related_sale" t-value="env['sale.order'].search([('name', '=', doc.invoice_origin)])"/>
            <div class="oe_structure"/>
            <h1 class="text-center"><strong>Tax Invoice</strong></h1>
            <div class="row">
                <div class="col-6" style="font-size:13px;">
                    <strong>Invoice to:</strong>
                    <t t-set="partner_invoice_id" t-value="doc.partner_id.child_ids.filtered(lambda x: x.type=='invoice')"/>
                    <div t-esc="partner_invoice_id and partner_invoice_id[0] or  doc.partner_id" t-options="{'widget': 'contact', 'fields': ['address','name'], 'no_marker': True, 'phone_icons': True}"/>
                    <div t-field="doc.partner_id.commercial_partner_id.phone"/>
                    <div>Attn. <span t-field="doc.partner_id.name"/></div>
                    <div t-field="doc.partner_id.email"/>
                    <div t-field="doc.partner_id.phone"/>
                    <div t-field="doc.partner_id.mobile"/>
                </div>
                <div class="col-5 offset-1" style="font-size:13px;">
                    <div><strong>Invoice No.:</strong> <span t-field="doc.name"/></div>
                    <div><strong>Date:</strong> <span t-field="doc.invoice_date"/></div>
                    <div><strong>Due Date:</strong> <span t-field="doc.invoice_date_due"/></div>
                    <div><strong>Payment Terms:</strong> <span t-field="doc.invoice_payment_term_id"/></div>
                    <div><strong>Customer PO:</strong> <span t-field="doc.ref"/></div>
                    <div><strong>SO:</strong> <span t-esc="related_sale and related_sale.name or ''"/></div>
                </div>
            </div>
            <div class="oe_mt8">
                <span t-esc="doc.company_id.id==1 and 'ABN' or 'GST'"/>: <span t-field="doc.partner_id.vat"/>
            </div>

            <table class="table custom-table oe_mt16" style="font-size:13px;">
                <thead>
                    <tr>
                        <th class="text-right">QUANTITY</th>
                        <th>ITEM NAME</th>
                        <th>DESCRIPTION</th>
                        <th class="text-center">UNIT PRICE (ex GST)</th>
                        <th class="text-right">DISC.(%)</th>
                        <th class="text-center">TOTAL PRICE (ex- GST)</th>
                    </tr>
               </thead>
               <tbody class="sale_tbody" style="font-size:13px;">
                    <t t-foreach="doc.invoice_line_ids" t-as="l">
                        <tr t-att-class="'bg-200 font-weight-bold o_line_section' if l.display_type == 'line_section' else 'font-italic o_line_note' if l.display_type == 'line_note' else ''">
                            <t t-if="not l.display_type">
                            <td class="text-right">
                                <span t-field="l.quantity"/>
                                <span t-field="l.uom_id" groups="product.group_uom"/>
                            </td>
                            <td><span t-field="l.product_id"/></td>
                            <td><span t-field="l.name"/></td>
                            <td class="text-right">
                                <span t-field="l.price_unit"/>
                            </td>
                            <td class="text-right">
                                <span t-field="l.discount"/>
                            </td>
                            <td class="text-right">
                                <span t-field="l.price_subtotal" t-options="{'widget': 'monetary', 'display_currency': doc.currency_id}"/>
                            </td>
                            </t>
                            <t t-if="l.display_type == 'line_section'">
                                <td name="td_section_line" colspan="99">
                                    <span t-field="l.name"/>
                                </td>
                                <t t-set="current_section" t-value="line"/>
                                <t t-set="current_subtotal" t-value="0"/>
                            </t>
                            <t t-if="l.display_type == 'line_note'">
                                <td name="td_note_line" colspan="99">
                                    <span t-field="l.name"/>
                                </td>
                            </t>
                        </tr>
                    </t>
                </tbody>
            </table>

            <div style="page-break-inside: avoid !important;">
                <div class="clearfix">
                    <div class="row" name="total">
                      <div class="col-8"/>
                        <div class="col-6" style="font-size:13px;">
                            <table class="table" style="min-width: 200px;max-width: 350px;border:1px solid #dddddd;">
                                <tr>
                                    <td width="30%"><strong>Salesperson:</strong></td>
                                    <td>
                                        <t t-esc="related_sale and related_sale.user_id.name or ''"/>
                                    </td>
                                </tr>
                                <tr style="border-top:hidden;">
                                    <td><strong>Notes: </strong></td>
                                    <td style="min-height:25px;">
                                        <span t-field="doc.narration"/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-4 offset-2 pull-right">
                            <table class="table custom-table" style="min-width: 200px;max-width: 350px; font-size:13px;">
                                <tr>
                                    <td><strong>Subtotal:</strong></td>
                                    <td class="text-right">
                                        <span t-field="doc.amount_untaxed" t-options="{'widget': 'monetary', 'display_currency': doc.currency_id}"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="border-top:hidden;"><strong>GST:</strong></td>
                                    <td style="border-top:hidden;" class="text-right">
                                        <span t-field="doc.amount_tax" t-options="{'widget': 'monetary', 'display_currency': doc.currency_id}"/>
                                    </td>
                                </tr>
                                <tr class="border-black">
                                    <td><strong>Total (inc-GST)</strong></td>
                                    <td class="text-right">
                                        <span t-field="doc.amount_total" t-options="{'widget': 'monetary', 'display_currency': doc.currency_id}"/>
                                    </td>
                                </tr>
                                <tr class="border-black">
                                    <td><strong>Balance Due (<span t-field="doc.currency_id"/>)</strong></td>
                                    <td class="text-right">
                                        <span t-field="doc.amount_residual" t-options="{'widget': 'monetary', 'display_currency': doc.currency_id}"/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-6 oe_mb16" style="font-size:13px;"><strong>How to Pay</strong><br/>
                        <strong>By Internet</strong> &amp;nbsp;&amp;nbsp;Please reference: <span t-field="doc.name"/><br/>
                        <t t-if="doc.company_id.id == 3">
                          BNZ<br/>
                          Account No: 02-0108-0384464-000<br/>
                          Swift code: BKNZNZ22<br/>
                        </t>
                        <t t-if="doc.company_id.id == 1">
                          BSB: 086-334&amp;nbsp;&amp;nbsp;&amp;nbsp;<br/>Account No: 813207500<br/>
                          BANK: NAB&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;Branch: Morley WA<br/>
                        </t>
                        Account: Papworths Construction Testing Equipment Pty Ltd<br/>
                        Swift Code: NATAAU3303M<br/>
                        Please email remittance to: admin@pcte.com.au
                    </div>
                    <div class="col-4 offset-2" style="font-size:13px;">
                        <div name="pay_info"/>
                        <br/>Yours Sincerely,<br/>
                        <img src="/custom_report_jsi/static/src/img/signature.png"/><br/>
                        Reuben Barnes<br/>
                        Managing Director
                    </div>
                </div>
            </div>
        </div>
    </t>
</template>

<template id="report_invoice_jsi">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="doc">
            <t t-call="custom_report_jsi.report_invoice_document_jsi" t-lang="doc.partner_id.lang"/>
        </t>
    </t>
</template>

<template id="report_invoice_document_pre_paid_jsi" inherit_id="custom_report_jsi.report_invoice_document_jsi" primary="True">
    <div name="pay_info" position="inside">
        To pay via credit card (only Visa or Mastercard will be accepted).<br/>
Payment via this method incurs a 1.5% surcharge
    </div>
</template>

<template id="report_invoice_pre_paid_jsi">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="doc">
            <t t-call="custom_report_jsi.report_invoice_document_pre_paid_jsi" t-lang="doc.partner_id.lang"/>
        </t>
    </t>
</template>

</odoo>
