    <template id="followup_filter_info_template_inheited_jsi" inherit_id="account_reports.followup_filter_info_template">
        <div position="replace">
            <h2 class="print_only text-center">CUSTOMER ACCOUNT STATEMENT</h2>
            <div t-if="context.get(&quot;mail&quot;) != True" class="print_only" style="margin-bottom: 20px;">
              <t t-if="invoice_address_id" t-set="partner_addr" t-value="invoice_address_id"/>
              <t t-else="" t-set="partner_addr" t-value="partner"/>
              <div class="row">
                  <div class="col-xs-5" style="margin-top: 15px;">
                      <div t-field="partner_addr.commercial_partner_id" t-field-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;, &quot;phone&quot;], &quot;no_marker&quot;: True}"/>
                      
                      Att: <span t-field="partner_addr.self"/><br/>
                      Email: <span t-field="partner_addr.email"/><br/>
                      ABN: <span t-field="partner_addr.vat"/><br/>
                      Date: <span t-esc="today" t-options="{'widget': 'date'}"/><br/>
                  </div>
              </div>
            </div>
        </div>
    </template>
    
