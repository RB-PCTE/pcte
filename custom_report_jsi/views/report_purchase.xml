<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="report_purchase_document_jsi">
    <t t-call="custom_report_jsi.external_layout_custom_jsi">
        <t t-set="doc" t-value="doc.with_context({'lang':doc.partner_id.lang})" />
        <div class="page">
            <link rel="stylesheet" type="text/css" href="/custom_report_jsi/static/src/css/sale_report.css"/>
            <div class="oe_structure"/>
            <h1 class="text-center"><strong>Purchase Order</strong></h1>
            <div class="row">
                <div class="col-xs-6">
                    <div>Supplier details:</div>
                    <div t-field="doc.partner_id.commercial_partner_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: True, &quot;phone_icons&quot;: True}"/>
                    <div>Attn. <span t-field="doc.partner_id.name"/></div>
                    <div t-field="doc.partner_id.email"/>
                    <div t-field="doc.partner_id.phone"/>
                </div>
                <div class="col-xs-5 col-xs-offset-1">
                    <div><strong>PO No.: </strong> <span t-field="doc.name"/></div>
                    <div><strong>Date: </strong> <span t-field="doc.date_order" t-options="{'widget':'date'}"/></div>
                </div>
            </div>

            <table class="table custom-table mt16">
                <thead>
                    <tr>
                        <th class="text-right">QUANTITY</th>
                        <th>ITEM NAME</th>
                        <th>SUPPLIER ITEM CODE</th>
                        <th class="text-center">UNIT PRICE</th>
                        <th class="text-center">DISCOUNT(%)</th>
                        <th class="text-center">TOTAL PRICE</th>
                    </tr>
               </thead>
               <tbody class="sale_tbody">
                    <t t-foreach="doc.order_line" t-as="l">
                        <tr>
                            <td class="text-right">
                                <span t-field="l.product_qty"/>
                            </td>
                            <td><span t-field="l.product_id"/></td>
                            <td>
                                <t t-esc="l.product_id.product_tmpl_id.seller_ids and l.product_id.product_tmpl_id.seller_ids[0].product_code or ''"/>
                            </td>
                            <td class="text-right">
                                <span t-field="l.price_unit"/>
                            </td>
                            <td class="text-right">
                                <span t-field="l.discount"/>
                            </td>
                            <td class="text-right">
                                <span t-field="l.price_subtotal" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.currency_id}"/>
                            </td>
                        </tr>
                    </t>
                </tbody>
            </table>

            <div class="clearfix">
                <div class="row" name="total">
                    <div class="col-xs-4 pull-right">
                        <table class="table custom-table" style="min-width: 200px;max-width: 350px;">
                            <tr class="border-black">
                                <td class="text-center"><strong>Total</strong></td>
                                <td class="text-right">
                                    <span t-field="doc.amount_total" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.currency_id}"/>
                                </td>
                            </tr>
                            <tr class="border-black">
                                <td class="text-center"><strong>Currency</strong></td>
                                <td class="text-right">
                                    <span t-field="doc.currency_id"/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="mb16 col-xs-6">
                    <strong>Delivery to:</strong><br/>
                    <div t-field="doc.picking_type_id.warehouse_id.partner_id.name"/>
                    <div t-field="doc.picking_type_id.warehouse_id.partner_id" t-options="{'widget': 'contact', 'fields': ['address', 'phone'], 'no_marker': True, 'phone_icons': True}"/>
                    <!-- <div t-field="res_company.name"/>
                    <div t-field="res_company.partner_id" t-options="{'widget': 'contact', 'fields': ['address', 'phone'], 'no_marker': True, 'phone_icons': True}"/> -->
                    <div class="mt16" t-field="doc.notes"/>
                    Yours Sincerely,<br/>
                    <img src="/custom_report_jsi/static/src/img/signature.png"/><br/>
                    Reuben Barnes<br/>
                    Managing Director
                </div>
                <div class="col-xs-6">
                    <strong>Packing Information:</strong><br/>
                    <p>
                        Please refer to the shipping method indicated on accompanying email.<br/>
                        Please provide invoices by email to
                        Papworths Construction Testing Equipment Pty Ltd at 
                        r.barnes@pcte.com.au<br/>
                        Prices EX GST for Australian Dollar Orders
                    </p>
                </div>
            </div>
        </div>
    </t>
</template>

<template id="report_purchase_jsi">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="doc">
            <t t-call="custom_report_jsi.report_purchase_document_jsi" t-lang="doc.partner_id.lang"/>
        </t>
    </t>
</template>

</odoo>
