<?xml version="1.0"?>
<odoo>
<template id="report_delivery_document_jsi">
    <t t-call="custom_report_jsi.external_layout_custom_jsi">
        <t t-set="doc" t-value="doc.with_context({'lang':doc.partner_id.lang})" />
        <div class="page">
            <link rel="stylesheet" type="text/css" href="/custom_report_jsi/static/src/css/sale_report.css"/>
            <div class="oe_structure"/>
            <h1 class="text-center"><strong>Delivery Docket</strong></h1>
            <div class="row">
                <div class="col-xs-6">
                    <div>Customer details:</div>
                    <div t-field="doc.partner_id.commercial_partner_id"
                        t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True, "phone_icons": True}'/>
                    <div>Attn. <span t-field="doc.partner_id.name"/></div>
                    <div t-field="doc.partner_id.email"/>
                    <div t-field="doc.partner_id.phone"/>
                </div>
                <div class="col-xs-5 col-xs-offset-1">
                    <div><strong>Docket No.: </strong> <span t-field="doc.name"/></div>
                    <div><strong>Customer PO No.: </strong> <!-- <span t-field="doc.name"/> --></div>
                    <div><strong>Invoice No.: </strong> <!-- <span t-field="doc.name"/> --></div>
                    <div><strong>Date: </strong> <span t-field="doc.scheduled_date" t-options="{'widget':'date'}"/></div>
                </div>
            </div>

            <table class="table custom-table mt16">
                <thead>
                    <tr>
                        <th class="text-right">QUANTITY</th>
                        <th>ITEM NAME</th>
                        <th>DESCRIPTION</th>
                    </tr>
               </thead>
               <tbody class="sale_tbody">
                    <t t-foreach="doc.move_lines" t-as="l">
                        <tr>
                            <td class="text-right">
                                <span t-field="l.quantity_done"/>
                            </td>
                            <td><span t-field="l.product_id.default_code"/></td>
                            <td><span t-field="l.product_id.name"/></td>
                        </tr>
                    </t>
                </tbody>
            </table>

            <div class="row">
                <div class="mb16 col-xs-6">
                    <strong>For Delivery to:</strong><br/>
                    <div t-field="res_company.name"/>
                    <div t-field="res_company.partner_id" t-options="{'widget': 'contact', 'fields': ['address', 'phone'], 'no_marker': True, 'phone_icons': True}"/>
                </div>
            </div>
        </div>
    </t>
</template>

<template id="report_delivery_jsi">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="doc">
            <t t-call="custom_report_jsi.report_delivery_document_jsi" t-lang="doc.partner_id.lang"/>
        </t>
    </t>
</template>

</odoo>
