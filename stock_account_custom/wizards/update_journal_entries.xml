    <record id="wizard_delete_account_account_view_form" model="ir.ui.view">
        <field name="name">wizard.delete.account.account.form</field>
        <field name="model">wizard.delete.account.account</field>
        <field name="arch" type="xml">
            <form string="Clean account">
                <group>
                    <field name="account_ids" widget="many2many_tags"/>
                </group>
                <footer>
                    <button string="Update" name="button_delete_account" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <act_window id="wizard_delete_account_account_view_form_action"
            name="Clean Account"
            src_model="account.account"
            res_model="wizard.delete.account.account"
            view_type="form" view_mode="form"
            key2="client_action_multi" target="new" groups="base.group_no_one"/>

    <record id="wizard_fix_wow_cc_reconciliation_view_form" model="ir.ui.view">
        <field name="name">wizard.fix.wow.cc.reconciliation.form</field>
        <field name="model">wizard.fix.wow.cc.reconciliation</field>
        <field name="arch" type="xml">
            <form string="Fix Reconciliation">
                <group>
                    <field name="account_id" required="1"/>
                </group>
                <footer>
                    <button string="Update" name="button_update_reconciliation" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <act_window id="wizard_fix_wow_cc_reconciliation_view_form_action"
            name="Fix Reconciliation"
            src_model="account.move.line"
            res_model="wizard.fix.wow.cc.reconciliation"
            view_type="form" view_mode="form"
            key2="client_action_multi" target="new" groups="base.group_no_one"/>

</odoo>