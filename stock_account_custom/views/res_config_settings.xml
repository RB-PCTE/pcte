<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.stock.supplier.price</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div id="production_lot_info" position="after">
                <h2>Discount &amp; Price</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="use_supplier_price"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="use_supplier_price"/>
                            <div class="text-muted">
                                Apply supplier price and discount when compute stock journal
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>